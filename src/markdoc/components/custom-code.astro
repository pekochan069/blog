---
import { Code } from "astro-expressive-code/components";
import MathComponent from "./math.astro";
import Mermaid from "./mermaid.astro";

const { code, lang } = Astro.props;
---

{
  lang === "math" ? (
    <MathComponent src={code} />
  ) : lang === "mermaid" ? (
    <Mermaid src={code} />
  ) : (
    <Code code={code} lang={lang} wrap={false} />
  )
}
