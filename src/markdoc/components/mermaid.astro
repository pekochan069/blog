---
type Props = {
  src: string;
};
const { src } = Astro.props;
---

<pre class="mermaid">
  <Fragment set:html={src} />
</pre>
<script>
  import mermaid from "mermaid";

  // mermaid.initialize({
  //   "theme"
  // })

  (() => {
    // @ts-ignore
    if (window.mermaid) {
      return;
    }

    // @ts-ignore
    window.mermaid = mermaid;
    // @ts-ignore
    window.mermaid.initialize({
      theme: "default",
    });
  })();
</script>
